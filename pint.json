{
    "preset": "symfony",
    "rules": {
        "braces_position": {
            "functions_opening_brace": "same_line",
            "classes_opening_brace": "same_line"
        },
        "global_namespace_import": {
            "import_classes": true
        },
        "align_multiline_comment": {
          "comment_type": "all_multiline"
        },
        "array_syntax": {
            "syntax": "short"
        },
        "no_whitespace_before_comma_in_array": {
            "after_heredoc": false
        },
        "ordered_class_elements": {
            "sort_algorithm": "none"
        }
    }
}
